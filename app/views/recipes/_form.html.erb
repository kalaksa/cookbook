<%= form_for(@recipe, html: {multipart: true}) do |f| %>
<ul>
  <% @recipe.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>
<p>
  <%= f.label :components %><br />
  <%= f.text_area :components %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</p>
<p>
  <% if @recipe.image.exists? %>
      <%= image_tag @recipe.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach a New Image" %><br />
  <%= f.file_field :image %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
