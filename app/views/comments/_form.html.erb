<h3>Post a Comment</h3>
<%= form_for([ @recipe, @comment], html: {class: "form-horizontal"}) do |f| %>
<fieldset>
  <div class="col-lg-6">
    <div class="row">
      <% if !user_signed_in? %>
        <div class="form-group">
          <div class="col-lg-12">
            <%= f.text_field :author_name, class: "form-control", placeholder: "Your name" %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-lg-12">
          <%= f.text_area :body, class: "form-control", placeholder: "Your comment" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-12">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
<% end %>
